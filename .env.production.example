# Production Environment
# Copy this file to .env for production builds

# Backend API URL
EXPO_PUBLIC_SERVER_URL=https://api.example.com

# Debug Mode
EXPO_PUBLIC_DEBUG_MODE=false

# API Timeout (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=15000

# Sentry DSN (Error Tracking)
# Get from: https://sentry.io
EXPO_PUBLIC_SENTRY_DSN=

# Analytics Key
EXPO_PUBLIC_ANALYTICS_KEY=

# Stripe Publishable Key (Live Mode)
# Get from: https://dashboard.stripe.com/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# App Store URLs (Optional)
EXPO_PUBLIC_IOS_APP_STORE_URL=https://apps.apple.com/app/id
EXPO_PUBLIC_ANDROID_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=
